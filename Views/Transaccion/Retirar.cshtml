@model AppTransferencia.Models.Transaccion

@{
    ViewData["Title"] = "Retirar";
}


<h4 class="align-content-center">Datos De Retiro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Retirar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdTipoTransaccion" class="control-label"></label>
                <select asp-for="IdTipoTransaccion" class ="form-control" asp-items="ViewBag.IdTipoTransaccion"></select>
            </div>            
            <div class="form-group">
                <label asp-for="IdCliente" class="control-label"></label>
                <select asp-for="IdCliente" class ="form-control" asp-items="ViewBag.IdCliente"></select>
            </div>
            <div class="form-group">
                <label asp-for="ValorRetiro" class="control-label"></label>
                <input asp-for="ValorRetiro" class="form-control" />
                <span asp-validation-for="ValorRetiro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCuentaOrigen" class="control-label"></label>
                <select asp-for="IdCuentaOrigen" class ="form-control" asp-items="ViewBag.IdCuentaOrigen"></select>
            </div>                    
            
		<div class="form-group">
			<input type="submit" value="Create" class="btn btn-primary" />
			<a asp-action="Index" class="btn btn-danger align-content-end">Volver</a>
		</div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
