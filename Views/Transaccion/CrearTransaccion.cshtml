@model AppTransferencia.Models.Transaccion

@{
	ViewData["Title"] = "Crear";
}

<h1>Crear</h1>

<h4>Transaccion</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="IdTipoTransaccion" class="control-label"></label>
				<select asp-for="IdTipoTransaccion" class="form-control" asp-items="ViewBag.IdTipoTransaccion"></select>
			</div>
			<div class="form-group">
				<label asp-for="ValorGmf" class="control-label"></label>
				<input asp-for="ValorGmf" class="form-control" />
				<span asp-validation-for="ValorGmf" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="IdCliente" class="control-label"></label>
				<select asp-for="IdCliente" class="form-control" asp-items="ViewBag.IdCliente"></select>
			</div>
			<div class="form-group">
				<label asp-for="ValorRetiro" class="control-label"></label>
				<input asp-for="ValorRetiro" class="form-control" />
				<span asp-validation-for="ValorRetiro" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="IdCuentaOrigen" class="control-label"></label>
				<select asp-for="IdCuentaOrigen" class="form-control" asp-items="ViewBag.IdCuentaOrigen"></select>
			</div>

			<div class="form-group">
				<label asp-for="IdCuentaDestino" class="control-label"></label>
				<select asp-for="IdCuentaDestino" class="form-control" asp-items="ViewBag.IdCuentaDestino"></select>
			</div>
			<div class="form-group">
				<label asp-for="FechaTransacción" class="control-label"></label>
				<input asp-for="FechaTransacción" class="form-control" />
				<span asp-validation-for="FechaTransacción" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Volver</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
